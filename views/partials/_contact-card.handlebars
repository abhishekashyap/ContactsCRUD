{{#each contacts}}

<div class="card">
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4">{{name}}</p>
        <p class="subtitle is-6">{{phone}}</p>
      </div>
    </div>

    <div class="content">
      {{comments}}
      <br>
      <a>{{email}}</a>
      <br>
      <time datetime="2016-1-1">Birthday: {{dob}}</time>
      <br>
    </div>
    <div class="container">
      <form action="/{{id}}?_method=DELETE" method="post">
        <button class="button is-dark">Edit</button>
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="button is-danger" value="Delete">
      </form>
    </div>
  </div>
</div>

{{else}}

<div class="card">
  <div class="card-content">
    <p class="subtitle">No contacts found!</p>
  </div>
</div>

{{/each}}